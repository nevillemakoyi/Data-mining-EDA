with plt.style.context('cyberpunk'):
    fig, ax = plt.subplots( figsize = (5,2))
    x = df['sex'].value_counts().index.tolist()
    y = df['sex'].value_counts().values.tolist()


    ax.bar(x,y)
    ax.set_title('Nbre de Personnes par Sexe')
    plt.show()


